<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% acoes.forEach(function(acao) { %>
			<% 
				var txt_acao;
				switch(acao.acao) {
					case "1": 
						txt_acao = 'aldeão(ões) coletando recursos';
						break;
					case "2": 
						txt_acao = 'enforcamento(s) programado';
						break;
					case "3": 
						txt_acao = 'aldeão(ões) em treinamento de história';
						break;
					case "4": 
						txt_acao = 'aldeão(ões) em treinamento de magia';
						break;
				}

				var tempo_restante = acao.end_time - (new Date()).getTime();
				tempo_restante = Math.round(tempo_restante/1000);
			%>
				
			<li>
				<%= acao.quantidade %> <%= txt_acao %>
				- <small>restam <span class="tempo-restante"><%= tempo_restante %></span> segundos
				- <a href="#">revogar ordem</a>
				</small>
			</li>
		<% }); %>
		
